<script type="text/javascript">
    var url;
    $(function () {
        $.extend($.fn.validatebox.defaults.rules, {
            maxLength: {
                validator: function (value, param) {
                    return value.length <= param[0];
                },
                message: '不能超过{0}个字符.'
            }
        });
    })
    function addClick() {
        AddLoad();
        $('#dlg').dialog('open').dialog('setTitle', '新增客户信息');
        $('#customerfm').form('clear');
        $('#customerfm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#customerCode').attr("readonly", false);
        $('#saleScope').combo({
            hasDownArrow: true
        });
        $('#C_isActive').combo({
            hasDownArrow: true
        });
        url = '/Customer/Create/';
    };

    function save() {
        $('#customerfm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.alert(g_MsgBoxTitle, result.msg, "info");
                    $('#dlg').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.alert(g_MsgBoxTitle, result.msg + '<br />' + result.data, "error");
                    $('#details').datagrid('reload');
                }
            }
        });
    }

    function AddLoad() {
        $('#C_isActive').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 130
        });

        $('#saleScope').combo({
            required: true,
            editable: false,
            panelHeight: 65,
            panelWidth: 130
        });
        $('#industryType').combo({
            required: true,
            editable: false,
            panelHeight: 150,
            panelWidth: 130
        });
        $('#customerType').combo({
            required: true,
            editable: false,
            panelHeight: 100,
            panelWidth: 130
        });
        $('#cityOrCountryside').combo({
            required: true,
            editable: false,
            panelHeight: 100,
            panelWidth: 130
        }); 
    }
</script>
