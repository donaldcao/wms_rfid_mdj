<script type="text/javascript">
    function searchClick() {
        $('#dlg-search input').val("");
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    };

    function customer_select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.CustomerCode = $('#customerCode').val();
        queryParams.CustomerName = $('#customerName').val();
        queryParams.DeliverLineCode = $('#deliverLineCode').val();
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 50
        });
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close');
    }
    function deliverLine_Select() {
        $('#deliverLine_Data').dialog('open').dialog('setTitle', '配送线路查询');
        $('#deliverLine_Detail').datagrid({ url: '/DeliverLine/C_Details/' });
        $("#deliverLine_Detail").datagrid('reload');
    }
</script>
<div id="dlg-search" class="easyui-dialog" modal="true" style="width: 300px; height: 200px;
    padding: 2px 2px"  closed="true"  buttons="#dlg-buttons-research">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" style="padding: 10px 10px; background: #fff;
            border: 1px solid #ccc;">
            <table width="270">
                <tr>
                    <td style="text-align: right; width: 80px;">
                        客户编码:
                    </td>
                    <td><input name="CustomerCode" id="customerCode" type="text">
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right; width: 80px;">
                        客户名称:
                    </td>
                    <td><input name="CustomerName" id="customerName" type="text">
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right; width: 80px;">
                        线路编码:
                    </td>
                    <td>
                        <input name="DeliverLineCode" id="deliverLineCode" type="text">
                        <a href="#" id="deliverLine_Search" class="easyui-linkbutton" iconcls="icon-search"
                             readonly="true" plain="true" onclick="deliverLine_Select()"></a>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right; width: 80px;">
                        线路名称:
                    </td>
                    <td>
                        <input name="DeliverLineName" id="deliverLineName" type="text" readonly="true">
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-research">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="customer_select()">查询</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">
        取消</a>
</div>
