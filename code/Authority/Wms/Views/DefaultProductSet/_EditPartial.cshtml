<script type="text/javascript">
    function editClick() {
        editType = 'edit';
        var productRow = $('#details').datagrid('getSelected');
        if (!productRow || productRow.length == 0) {
            $.messager.alert('提示', '请选择要编辑的数据!', 'info');
            return;
        }
        if (productRow) {
            $('#productCode2').attr("readonly", true);
            $('#productName2').attr("readonly", true);
            $('#productCode2').val(productRow.ProductCode);
            $('#productName2').val(productRow.ProductName);
        };
        $('#dlg').dialog('open').dialog('setTitle', '编辑');
        editKey = true;
        $.ajaxSender.send('/DefaultProductSet/CellCodeSet/',
                        {
                            'productId': productRow.ProductCode
                        },
                        function (data) {
                            $.fn.zTree.init($("#treeDemo"), setting, data);
                        }, $('#dlg'));                        
    }
</script>
