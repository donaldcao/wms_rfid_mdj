<script type="text/javascript">
    $(function () {
        //属性初始化
        $('#productChoose').combo({ editable: false, width: 100, panelHeight: 'auto' });
    })
    //点击弹出查询框
    function searchClick() {
        $('#dlgSearch').dialog('open').dialog('setTitle', '查询');
        $("input[type=text]").attr("value", "");
    }
    //点击查询结果
    function searchResult() {
        var productChoose = $('#productChoose').combogrid('getValue');
        var productInfo = $('#productInfo').val();
        $("#details").datagrid({
            url: '/DefaultProductSet/GetCellBy/?QueryString=' + productChoose + '&Value=' + productInfo
        });
        $("#details").datagrid('reload');
        $('#dlgSearch').dialog('close');
    }  
</script>
<style type="text/css">
    #dlgSearch{ width:290px; height:50px; padding:2px 2px; }
    .c_div { padding:10px 10px; background:$fff; border:1px solid #ccc; }
</style>
<div id="dlgSearch" class="easyui-dialog" modal="true" closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" class="c_div">
            <select id="productChoose" class="easyui-combobox">
                <option value="ProductCode">卷烟编码</option>
                <option value="ProductName">卷烟名称</option>
            </select>
            <input id="productInfo" type="text">
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="searchResult()">查询</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlgSearch').dialog('close')">取消</a>
</div>
