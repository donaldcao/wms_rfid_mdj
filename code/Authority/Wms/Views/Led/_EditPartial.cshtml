<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {

            isLedMasterAdd = false;
            isShowLedDetail = true;
            $('#dlg').dialog('open').dialog('setTitle', '编辑');
            editKey = true;
            $('#fm').form('load', row);


//            $('#addSortingLineCode').combo({
//                hasDownArrow: true
//            });
            $('#addStatus').combo({
                hasDownArrow: true
            });
//            $('#addLedType').combo({
//                hasDownArrow: true
//            });

//            if (row.SortingLineCode == "分拣线A") {
//                $('#addSortingLineCode').combo('setValue', 01).combo('setText', row.SortingLineCode);
//            } else {
//                $('#addSortingLineCode').combo('setValue', 02).combo('setText', row.SortingLineCode);
//            }
            if (row.Status == "可用") {
                $('#addStatus').combo('setValue', 1).combo('setText', row.Status);
            } else {
                $('#addStatus').combo('setValue', 0).combo('setText', row.Status);
            }

            if (row.LedType == "整屏") {
                $('#addLedType').combo('setValue', 1).combo('setText', row.LedType);
            } else {
                $('#addLedType').combo('setValue', 2).combo('setText', row.LedType);
            }




            $('#inLedDetail').datagrid({ url: '/Led/Details/?LedCode=' + row.LedCode });
            $('#fm .easyui-validatebox').validatebox({
                required: true
            });
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");
            $('#btnAddLedDetail').css('display', 'inline'); //设置新增明细按钮的可见性
            $('#btnDeleteLedDetail').css('display', 'inline'); //设置删除明细按钮的可见性
            $('#btnEditLedDetail').css('display', 'inline'); //设置修改明细按钮的可见性
            url = '/Led/Edit/';
            detailUrl = '/Led/InLedDetailEdit/';

        } else {
            $.messager.alert('错误', '没有选择行！', 'info');
        }
    };
</script>
