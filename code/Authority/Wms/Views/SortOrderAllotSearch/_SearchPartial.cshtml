<script type="text/javascript">
    function searchClick() {
        $('#dlg-search input').val("");
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    }

    function select() {
        var queryParams = $('#master').datagrid('options').queryParams;
        queryParams.OrderDate = $('#OrderDate').datebox('getValue');
        queryParams.BatchNo = $('#BatchNo').val();
        queryParams.SortingLineCode = $("#searchSortingLineCode").val();
        queryParams.DeliverLineCode = $('#deliverLineCode').val();
        queryParams.ProductCode = $("#searchProductCode").val();
        $('#master').datagrid('options').queryParams = queryParams;
        $('#master').datagrid({
            pageNumber: 1
        });
        $('#master').datagrid("reload");
        $('#dlg-search').dialog("close");
    }
    //分拣线查询
    function SortingLineSearchClick() {
        $('#dlg-SortingLine').dialog('open').dialog('setTitle', '选择分拣线');
        $('#SortingLineDetails').datagrid({ url: '/SortingLine/Details/' });
        $("#SortingLineDetails").datagrid('load');
    }
    //配送线路查询
    function deliverLine_Select() {
        $('#deliverLine_Data').dialog('open').dialog('setTitle', '配送线路查询');
        $('#deliverLine_Detail').datagrid({ url: '/DeliverLine/C_Details/' });
        $("#deliverLine_Detail").datagrid('reload');
    }
    //卷烟查询
    function ProductSearchClick() {
        $('#productData').dialog('open').dialog('setTitle', '选择卷烟信息');
        $('#productDetail').datagrid({ url: '/DefaultProductSet/LoadProduct/' });
        $("#productDetail").datagrid('load');
    }
</script>
<div id="dlg-search" class="easyui-dialog" modal="true" style="width:300px;height:450px;padding:2px 2px"
		closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; ">
            <table width ="250">
                <tr>
                    <td style="text-align: right">
                        订单日期：
                    </td>
                    <td><input id="OrderDate" type="text" style="width: 130px " class="easyui-datebox"></td>
                </tr> 
                                         
                <tr>
                    <td style="text-align: right">
                        批次号：
                    </td>
                    <td width="168">
                        <input id="BatchNo" name="Batch" type="text" class="easyui-numberbox"/>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        分拣线代码:
                    </td>
                    <td align="left" style="width: 170px;">
                        <input id="searchSortingLineCode" name="SortingLineCode" class="easyui-validatebox"
                            readonly="readonly" required="true" />
                        <a href="#" id="SortingLineSearch" class="easyui-linkbutton" iconcls="icon-search"
                            plain="true" onclick="SortingLineSearchClick()"></a>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        分拣线名称:
                    </td>
                    <td align="left">
                        <input type="text" name="SortingLineName" class="easyui-validatebox" required="true"
                            id="searchSortingLineName" readonly="true" />
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right; width: 80px;">
                        线路编码:
                    </td>
                    <td>
                        <input name="DeliverLineCode" id="deliverLineCode" type="text" readonly="readonly">
                        <a href="#" id="deliverLine_Search" class="easyui-linkbutton" iconcls="icon-search"
                             readonly="true" plain="true" onclick="deliverLine_Select()"></a>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right; width: 80px;">
                        线路名称:
                    </td>
                    <td>
                        <input name="DeliverLineName" id="deliverLineName" type="text" readonly="readonly">
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        卷烟代码:
                    </td>
                    <td align="left" style="width: 170px;">
                        <input id="ProductCode" name="ProductCode" style="display: none;" />
                        <input id="searchProductCode" name="ProductCode" class="easyui-validatebox"
                            readonly="readonly" required="true" />
                        <a href="#" id="ProductSearch" class="easyui-linkbutton" iconcls="icon-search"
                            plain="true" onclick="ProductSearchClick()"></a>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        卷烟名称:
                    </td>
                    <td align="left">
                        <input type="text" name="ProductName" class="easyui-validatebox" required="true"
                            id="searchProductName" readonly="true" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="select()">查询</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">取消</a>
</div>
@Html.Partial("_SortingLinePartial")
@Html.Partial("_DeliverLinePartial")
@Html.Partial("_ProductPartial")