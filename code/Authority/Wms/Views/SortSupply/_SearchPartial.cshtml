<script type="text/javascript">
    function searchClick() {
        $('#dlg-search input').val("");
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    }

    function select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.SortBatchId = $('#SortBatchId').val();
        queryParams.PackNo = $('#PackNo').val();
        queryParams.ChannelCode = $("#searchChannelCode").val();
        queryParams.ProductCode = $("#searchProductCode").val();
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 50
        });
        $('#details').datagrid("reload");
        $('#dlg-search').dialog("close");
    }
    //烟道查询
    function ChannelSearchClick() {
        $('#dlg-Channel').dialog('open').dialog('setTitle', '选择烟道');
        $('#ChannelDetails').datagrid({ url: '/ChannelInfo/Details/' });
        $("#ChannelDetails").datagrid('load');
    }
    //卷烟查询
    function ProductSearchClick() {
        $('#productData').dialog('open').dialog('setTitle', '选择卷烟信息');
        $('#productDetail').datagrid({ url: '/DefaultProductSet/LoadProduct/' });
        $("#productDetail").datagrid('load');
    }
</script>
<div id="dlg-search" class="easyui-dialog" modal="true" style="width: 300px; height: 260px;
    padding: 2px 2px" closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" style="padding: 10px 10px; background: #fff;
            border: 1px solid #ccc;">
            <table width="250">
                <tr>
                    <td style="text-align: right">
                        分拣批次ID:
                    </td>
                    <td>
                        <input id="SortBatchId" type="text" style="width: 130px" class="easyui-numberbox">
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        烟包包号:
                    </td>
                    <td width="168">
                        <input id="PackNo" name="Batch" type="text" class="easyui-numberbox" />
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        烟道代码:
                    </td>
                    <td align="left" style="width: 170px;">
                        <input id="searchChannelCode" name="ChannelCode" class="easyui-validatebox"
                            readonly="readonly" />
                        <a href="#" id="ChannelCodeSearch" class="easyui-linkbutton" iconcls="icon-search"
                            plain="true" onclick="ChannelSearchClick()"></a>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        烟道名称:
                    </td>
                    <td align="left">
                        <input type="text" name="ChannelName" class="easyui-validatebox" id="searchChannelName"
                            readonly="true" />
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        卷烟代码:
                    </td>
                    <td align="left" style="width: 170px;">
                        <input id="ProductCode" name="ProductCode" style="display: none;" />
                        <input id="searchProductCode" name="ProductCode" class="easyui-validatebox" readonly="readonly" />
                        <a href="#" id="ProductSearch" class="easyui-linkbutton" iconcls="icon-search" plain="true"
                            onclick="ProductSearchClick()"></a>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        卷烟名称:
                    </td>
                    <td align="left">
                        <input type="text" name="ProductName" class="easyui-validatebox" id="searchProductName"
                            readonly="true" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="select()">查询</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">
        取消</a>
</div>
@Html.Partial("_ProductPartial")
@Html.Partial("_ChannelPartial")
