<script type="text/javascript">
    var url;
    function addClick() {
        addShowDialog();
        url = '/SupplyPosition/Add/';
    }
    function save() {
        $('#addFm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.alert(g_MsgBoxTitle, result.msg, "info");
                    $('#dlg-add').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.alert(g_MsgBoxTitle, result.msg + '<br />' + result.data, "error");
                    $('#details').datagrid('reload');
                }
            }
        });
    }
    function addShowDialog() {
        $('#dlg-add').dialog('open').dialog('setTitle', '新增');
        $('#addFm').form('clear');
        $('#addFm .easyui-validatebox').validatebox({ required: true });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
    }
    $(function () {
        addInit();
    });
    function addInit() {
        $('#productCode2').attr('readonly', 'true');
        $('#productName2').attr('readonly', 'true');
        $('#positionAddress2').attr('placeholder', '只能为数字');
        $('#positionCapacity2').attr('placeholder', '只能为数字');
        $('#positionType2').combo({ editable: false, width: 130, panelHeight: 'auto' });
        $('#isActive2').combo({ editable: false, width: 130, panelHeight: 'auto' });
    }
</script>
<style type="text/css">
    #dlg-add { width: 320px; height: 300px; padding: 0px 0px;}
    .c_add_table { width: 300px; padding: 0px 0px; }
    .c_div { padding: 10px 10px; background: #fff; border: 1px solid #ccc;}
</style>
<div id="dlg-add" class="easyui-dialog" modal="true" closed="true" buttons="#dlg-buttons">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" class="c_div">
            <form id="addFm" method="post" novalidate>
            <table class="c_add_table">
                <tr>
                    <td><input name="Id" style="display: none" /></td>
                </tr>
                <tr>
                    <td>位置名称</td>
                    <td><input id="positionName2" name="PositionName" class="easyui-validatebox"/></td>
                </tr>
                <tr>
                    <td>任务类型</td>
                    <td style="padding-right: 30px;">
                        <select id="positionType2" name="PositionType" class="easyui-combobox" required="true">
                            <option value=""></option>
                            <option value="01">自动补货拆盘位</option>
                            <option value="02">缓存补货拆盘位</option>
                            <option value="03">叉车补货拆盘位</option>
                            <option value="04">混合补货拆盘位</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>商品编码</td>
                    <td><input id="productCode2" name="ProductCode"/>
                        <a href="#" onclick="productQuery()" class="easyui-linkbutton" iconcls="icon-search" plain="true"></a>
                    </td>
                </tr>
                <tr>
                    <td>商品名称</td>
                    <td><input id="productName2" name="ProductName" /></td>
                </tr>
                <tr>
                    <td>位置地址</td>
                    <td><input id="positionAddress2" name="PositionAddress" class="easyui-validatebox"/></td>
                </tr>
                <tr>
                    <td>位置容量</td>
                    <td><input id="positionCapacity2" name="PositionCapacity"  class="easyui-validatebox"/></td>
                </tr>
                 <tr>
                    <td>可补货分拣线</td>
                    <td><input id="sortingLineCodes2" name="SortingLineCodes"/></td>
                 </tr>
                 <tr>
                    <td>可补货目标地址</td>
                    <td><input id="targetSupplyAddresses2" name="TargetSupplyAddresses"/></td>
                </tr>
                <tr>
                    <td>状态</td>
                    <td>
                        <select id="isActive2" name="IsActive" class="easyui-combobox" required="true">
                            <option value=""></option>
                            <option value="1">可用</option>
                            <option value="0">禁用</option>
                        </select>
                    </td>
                </tr>
                 <tr>
                    <td>描述</td>
                    <td><input id="description2" name="Description"/></td>
                </tr>
            </table>
            </form>
        </div>
    </div>
</div>
<div id="dlg-buttons">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="save()">确定</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-add').dialog('close')">取消</a>
</div>
