<script type="text/javascript">
    function editClick(row) {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            editShowDialog(row);
            editSetValue(row);
            url = '/SupplyPosition/Save/';

        } else {
            $.messager.alert('错误', '没有选择行！', 'info');
        }
    }
    function editShowDialog(row) {
        $('#dlg-add').dialog('open').dialog('setTitle', '编辑');
        $('#addFm').form('load', row);
        $('#addFm .easyui-validatebox').validatebox({ required: true });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
    }
    function editSetValue(row) {
        if (row.PositionType == '正常拆盘位置') {
            $('#positionType2').combo('setValue', '01').combo('setText', row.PositionType);
        }
        else if (row.PositionType == '缓存补货拆盘位') {
            $('#positionType2').combo('setValue', '02').combo('setText', row.PositionType);
        }
        else if (row.PositionType == '叉车补货拆盘位') {
            $('#positionType2').combo('setValue', '03').combo('setText', row.PositionType);
        }
        else {
            $('#positionType2').combo('setValue', '04').combo('setText', row.PositionType);
        }
        if (row.IsActive == '禁用') {
            $('#isActive2').combo('setValue', '0').combo('setText', row.IsActive);
        }
        else {
            $('#isActive2').combo('setValue', '1').combo('setText', row.IsActive);
        }
    }
</script>
