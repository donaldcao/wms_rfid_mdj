<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            deleteInit(row);
            url = '/SupplyPositionStorage/Delete/?id=' + row.Id;
        } else {
            $.messager.alert('错误', '没有选择行！', 'info');
        }
    }

    function deleteInit(row) {
        $('#dlg-add').dialog('open').dialog('setTitle', '删除');
        $('#addFm').form('load', row);
        //使Form中的文本验证失效
        $('#addFm .easyui-validatebox').validatebox({ required: false });
        //使Form中的文本禁用
        $('form input').attr("disabled", "disabled");
        $('form textarea').attr("disabled", "disabled");
    }
</script>
