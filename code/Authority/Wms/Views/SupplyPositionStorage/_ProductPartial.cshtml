<script type="text/javascript">
    function productQueryClick() {
        $("#productTable").datagrid({
            url: '/DefaultProductSet/GetProductBy/?QueryString=' + $('#productType').combogrid('getValue') + '&Value=' + $('#productInfo').val()
        });
        $("#productTable").datagrid('reload');
    }

    function productQuery() {
        $('#dlg-product').dialog('open').dialog('setTitle', '选择');
        $('#productTable').datagrid({ url: '/Product/Details/' });
        $("#productTable").datagrid('reload');
    }

    $(function () {
        productInit();
        productDoubleClick();
    });

    function productInit() {
        $('#productType').combo({ required: true, editable: false, panelWidth: 100, panelHeight: 'auto' })
        $('#productTable').datagrid({
            border: false,
            singleSelect: true,
            fit: true,
            fitColumns: false,
            toolbar: "#btn-query",
            pagination: true,
            rownumbers: true,
            pagesize: 10
        });
    }
    
    function productSave() {
        var productRow = $('#productTable').datagrid('getSelected');
        if (productRow) {
            //SearchPartial中的id
            $('#productCode1').val(productRow.ProductCode);
            $('#productName1').val(productRow.ProductName);
            //AddPartial中的id
            $('#productCode2').val(productRow.ProductCode);
            $('#productName2').val(productRow.ProductName);
            $('#dlg-product').dialog('close');
        }
    }
    
    function productDoubleClick() {
        $('#productTable').datagrid({
            onDblClickRow: function () {
                productSave();
            }
        })
    }
</script>
<style type="text/css">
    #dlg-product{width: 450px;height: 320px;padding: 0px 0px;}
    .divproinfo1{width: 450px;height: 320px;}
</style>
<div id="dlg-product" class="easyui-dialog" modal="true" closed="true" buttons="#dlg-product-buttons">
    <div id="btnQuery">
        <select id="productType" class="easyui-combobox" style="width: 100px;" readonly="true">
            <option value="ProductCode">卷烟编码</option>
            <option value="ProductName">卷烟名称</option>
        </select>
        <input id="productInfo">
        <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="productQueryClick()" id="productQuery">查询</a>
    </div>
    <div split="true" border="false" class="divproinfo1">
        <table id="productTable" class="easyui-datagrid">
            <thead>
                <tr>
                    <th field="ProductCode" width="80">卷烟编码</th>
                    <th field="ProductName" width="320">卷烟名称</th>
                </tr>
            </thead>
        </table>
    </div>
    <div id="dlg-product-buttons">
        <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="productSave()">确定</a>
        <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-product').dialog('close')">取消</a>
    </div>
</div>
